@{
    Layout = "EmployeeLayout";
    ViewData["Title"] = "RequestItem";
    var id = ViewData["token"];
    var id2 = ViewData["id"];
}

<div class="card card-primary card-outline" id="req">
    <div class="card-header">
        <h1>Request Item</h1>
    </div>
    <div class="card-body">

        <form id="requestNewItemForm" method="post" name="form1" onsubmit="return false">
            <div class="form-group">
                <label for="input-userId" class="form-control-label" hidden>User Id</label>
                <input type="text" id="input-akunId" class="form-control form-control-alternative" value="@id2" readonly/>
            </div>
            <div class="form-group focused">
                <label class="form-control-label" for="input-quantity">Quantity</label>
                <input type="text" id="input-quantity" name="qty" class="form-control form-control-alternative" placeholder="Number of item">
            </div>
            <div class="form-group">
                <label class="form-control-label" for="items"> Item</label>
                <input type="text" id="input-item" name="item" class="form-control form-control-alternative">
            </div>
            <div class="form-group">
                <label class="form-control-label" for="input-start-date">Start Date</label>

                <input type="datetime-local" id="input-start-date" name="startDate" class="form-control form-control-alternative">
                <div></div>
                <label class="form-control-label" for="input-start-date">End Date</label>
                <input type="datetime-local" id="input-end-date" name="endDate" class="form-control form-control-alternative">
            </div>
            <div class="form-group focused">
                <label>Notes</label>
                <textarea rows="4" class="form-control form-control-alternative" id="input-notes" name="notes" placeholder="Type in your purpose for borrowing this item... "></textarea>
            </div>
            <div class="row">
                <div class="col-12 text-right">
                    <a href="#" class="btn btn-primary" onclick="RequestItem()">Submit</a>
                </div>
            </div>
        </form>
    </div>
</div>